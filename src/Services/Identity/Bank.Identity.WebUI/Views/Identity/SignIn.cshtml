<section class="auth-wrap">
    <div class="auth-card">
        <h1 class="auth-title">Sign in to Neobank</h1>

        <form asp-action="Login" method="post" class="auth-form" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="val-summary"></div>

            <div class="field">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" autocomplete="email"
                       placeholder="Enter your email" />
                <span asp-validation-for="Email" class="val"></span>
            </div>

            <div class="field">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" autocomplete="current-password"
                       placeholder="Enter your password" />
                <span asp-validation-for="Password" class="val"></span>
            </div>

            <div class="field row">
                <label class="chk">
                    <input asp-for="RememberMe" type="checkbox" />
                    <span>Remember me</span>
                </label>
                <a class="muted" href="#">Forgot password?</a>
            </div>

            <button type="submit" class="btn btn-primary">Sign In</button>
        </form>

        <div class="divider"><span>or</span></div>

        <form asp-action="GoogleLogin" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-google">
                <img src="~/images/social-media-icons/google-logo.svg" alt="" class="g-icn" asp-append-version="true" />
                Continue with Google
            </button>
        </form>

        <p class="auth-switch">
            Don’t have an account?
            <a asp-controller="Identity" asp-action="SignUp" class="auth-link">Sign up</a>
        </p>
    </div>
</section>
