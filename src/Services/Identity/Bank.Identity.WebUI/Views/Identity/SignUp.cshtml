<section class="auth-wrap">
    <div class="auth-card">
        <h1 class="auth-title">Create your account</h1>

        <form asp-action="Register" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="ReturnUrl" />
            <div asp-validation-summary="ModelOnly" class="val-summary"></div>

            <div class="field">
                <label asp-for="Email"></label>
                <input asp-for="Email" type="email" autocomplete="email"
                       placeholder="Enter your email" />
                <span asp-validation-for="Email" class="val"></span>
            </div>

            <div class="field">
                <label asp-for="Password"></label>
                <input asp-for="Password" type="password" autocomplete="new-password"
                       placeholder="Create a password" />
                <span asp-validation-for="Password" class="val"></span>
            </div>

            <div class="field">
                <label asp-for="ConfirmPassword"></label>
                <input asp-for="ConfirmPassword" type="password" autocomplete="new-password"
                       placeholder="Confirm your password" />
                <span asp-validation-for="ConfirmPassword" class="val"></span>
            </div>

            <button type="submit" class="btn btn-primary">Sign up</button>
        </form>

        <div class="divider"><span>or</span></div>

        <form asp-action="GoogleLogin" method="post">
            @Html.AntiForgeryToken()
            <button type="submit" class="btn btn-google">
                <img src="~/images/social-media-icons/google-logo.svg" alt="" class="g-icn" asp-append-version="true" />
                Continue with Google
            </button>
        </form>

        <p class="auth-switch">
            Already have an account?
            <a asp-controller="Identity" asp-action="SignIn" class="auth-link">Sign in</a>
        </p>
    </div>
</section>

